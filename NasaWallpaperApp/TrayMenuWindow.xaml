<Window x:Class="NasaWallpaperApp.TrayMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TrayMenu" Height="Auto" Width="220"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True"
        Background="Transparent" ShowInTaskbar="False" Topmost="True" SizeToContent="Height"
        Deactivated="Window_Deactivated">

    <Window.Resources>
        <Style x:Key="MenuBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#3D3D3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BgSidebar}" BorderBrush="#444" BorderThickness="1" CornerRadius="8" Padding="5">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
        </Border.Effect>
        <StackPanel>
            <TextBlock Text="Immich Wallpaper" Foreground="#666" FontSize="10" Margin="15,5,0,5" FontWeight="Bold"/>
            
            <Button Content="Open Gallery" Click="Open_Click" Style="{StaticResource MenuBtn}"/>
            <Button Content="Refresh Wallpaper" Click="Refresh_Click" Style="{StaticResource MenuBtn}"/>
            <Button Content="Adjust Current" Click="Adjust_Click" Style="{StaticResource MenuBtn}"/>
            
            <Separator Background="#333" Margin="5,5"/>
            
            <Button Content="Exit App" Click="Exit_Click" Style="{StaticResource MenuBtn}" Foreground="#FF6B6B"/>
        </StackPanel>
    </Border>
</Window>