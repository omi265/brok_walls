<Window x:Class="NasaWallpaperApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NasaWallpaperApp"
        mc:Ignorable="d"
        Title="Immich Wallpaper" Height="700" Width="1000"
        WindowStyle="None" ResizeMode="CanResize" AllowsTransparency="True"
        Background="Transparent" FontFamily="Segoe UI">

    <Window.Resources>
        <local:BoolToVisConverter x:Key="BoolToVisConverter"/>
        <local:InverseBoolToVisConverter x:Key="InverseBoolToVisConverter"/>
        <local:SelectionToShadowConverter x:Key="SelectionToShadowConverter"/>
    </Window.Resources>

    <Border CornerRadius="10" Background="{StaticResource BgDark}" BorderBrush="#333" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0" Background="{StaticResource BgSidebar}" CornerRadius="10,0,0,10">
                <Grid Margin="20">
                    <Grid.Resources>
                        <Style x:Key="StyleChip" TargetType="RadioButton">
                            <Setter Property="Background" Value="#333"/>
                            <Setter Property="Foreground" Value="#AAA"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="Height" Value="28"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Background" TargetName="border" Value="{StaticResource AccentColor}"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" TargetName="border" Value="#444"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Grid.Resources>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- HEADER -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="IMMICH" FontSize="28" FontWeight="Bold" Foreground="{StaticResource AccentColor}"/>
                        <TextBlock Text="WALLPAPERS" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}"/>
                        <Border Height="1" Background="#333" Margin="0,20"/>
                    </StackPanel>

                    <!-- CONTROLS -->
                    <StackPanel Grid.Row="1">
                         <Button Content="↻ Refresh Gallery" Click="FetchPhotos_Click" Style="{StaticResource AccentBtn}" Height="45" Margin="0,0,0,10" FontSize="16"/>
                         <TextBlock Name="StatusLabel" Text="Ready" Foreground="#666" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,20" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>

                    <!-- BOTTOM ACTIONS -->
                    <StackPanel Grid.Row="2">
                         <TextBlock Text="WALLPAPER STYLE" FontSize="10" FontWeight="Bold" Foreground="#666" Margin="0,0,0,8"/>
                         
                         <UniformGrid Columns="3" Margin="0,0,0,15">
                             <RadioButton Name="RbFill" Content="Fill" Style="{StaticResource StyleChip}" GroupName="WpStyle" IsChecked="True"/>
                             <RadioButton Name="RbFit" Content="Fit" Style="{StaticResource StyleChip}" GroupName="WpStyle"/>
                             <RadioButton Name="RbStretch" Content="Stretch" Style="{StaticResource StyleChip}" GroupName="WpStyle"/>
                             <RadioButton Name="RbTile" Content="Tile" Style="{StaticResource StyleChip}" GroupName="WpStyle"/>
                             <RadioButton Name="RbCenter" Content="Center" Style="{StaticResource StyleChip}" GroupName="WpStyle"/>
                             <RadioButton Name="RbSpan" Content="Span" Style="{StaticResource StyleChip}" GroupName="WpStyle"/>
                         </UniformGrid>
                         
                         <Button Name="AdjustBtn" Content="Adjust &amp; Set" Click="Adjust_Click" Style="{StaticResource ModernBtn}" Background="#444" Margin="0,0,0,10" IsEnabled="False"/>
                         <Button Name="SetBtn" Content="Quick Set" Click="SetWallpaper_Click" Style="{StaticResource ModernBtn}" Margin="0,0,0,10" IsEnabled="False"/>
                         
                         <Button Content="⚙ Connection Settings" Click="Settings_Click" Style="{StaticResource ModernBtn}" Background="Transparent" Foreground="#666" FontSize="12" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- MAIN CONTENT -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/> <!-- Title Bar Area -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- CUSTOM TITLE BAR -->
                <Border Grid.Row="0" Background="Transparent" MouseDown="TitleBar_MouseDown">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0">
                        <Button Content="_" Click="Minimize_Click" Style="{StaticResource IconBtn}" Width="30" Height="30" Foreground="White" FontSize="14" FontWeight="Bold"/>
                        <Button Content="X" Click="Close_Click" Style="{StaticResource IconBtn}" Width="30" Height="30" Foreground="White" FontSize="14" FontWeight="Bold" Margin="5,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- GALLERY -->
                <ListBox Name="ImageGallery" Grid.Row="1" Background="Transparent" BorderThickness="0" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         SelectionChanged="ImageGallery_SelectionChanged" Margin="20,0,20,20">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Width="320" Height="200" Margin="10" CornerRadius="12" Background="{StaticResource BgCard}" Effect="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBoxItem}, Path=IsSelected, Converter={StaticResource SelectionToShadowConverter}}">
                                <Grid>
                                    <Border CornerRadius="12" ClipToBounds="True">
                                        <Image Source="{Binding Thumbnail}" Stretch="UniformToFill"/>
                                    </Border>
                                    <!-- Selection Overlay -->
                                    <Border Background="#4CC2FF" Opacity="0.8" CornerRadius="12" Visibility="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBoxItem}, Path=IsSelected, Converter={StaticResource BoolToVisConverter}}">
                                        <TextBlock Text="✓" FontSize="32" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                
                <!-- EMPTY STATE -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                    <TextBlock Text="No Photos Loaded" Foreground="#444" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Visibility="{Binding ElementName=ImageGallery, Path=HasItems, Converter={StaticResource InverseBoolToVisConverter}}"/>
                    <TextBlock Text="Click 'Connect &amp; Fetch' to start" Foreground="#444" FontSize="14" HorizontalAlignment="Center" Visibility="{Binding ElementName=ImageGallery, Path=HasItems, Converter={StaticResource InverseBoolToVisConverter}}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>